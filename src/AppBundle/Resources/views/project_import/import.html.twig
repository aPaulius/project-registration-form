{% extends '@App/base.html.twig' %}

{% form_theme form '@App/theme/form_errors.html.twig' %}

{% from '@App/macro/formFields.html.twig' import baseField %}

{% block content %}

    <div class="row">
        <div class="col-lg-12">
            <div class="tabs-container">
                <div class="tab-content">
                    <div class="tab-pane active">
                        <div class="panel-body">

                            {{ form_start(form) }}

                            {{ form_errors(form) }}

                            <fieldset>

                                {{ baseField(form.file) }}

                                <div class="form-group">
                                    <p>Atsisiųskite projekto PDF pavyzdį <a href="{{ path('project_import_example') }}">čia</a></p>
                                </div>

                                <hr>

                                <button class="btn btn-primary">Skanuoti</button>

                            </fieldset>

                            {{ form_end(form) }}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}