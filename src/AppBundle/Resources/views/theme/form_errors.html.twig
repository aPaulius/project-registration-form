{%- block form_errors -%}
    {%- if errors|length > 0 -%}
        <div class="form-group row">
            <label class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10 text-danger">
                {%- for error in errors -%}
                    {{ error.message }}
                {%- endfor -%}
            </div>
        </div>
    {%- endif -%}
{%- endblock form_errors -%}